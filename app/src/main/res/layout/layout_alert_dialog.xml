<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/view_rounded">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/text_title_alert"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_5"/>

        <com.example.luisfm.appbase.model.CTextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:padding="15dp"
            android:text="@string/text_message_alert"
            android:textColor="@color/color_6"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/size_text_buton_alert"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.00"
                android:text="@string/text_btn_cancel_alert"
                android:textSize="@dimen/size_text_buton_alert"
                android:textColor="@color/color_6"
                android:background="@drawable/view_effect_button"
                android:textAllCaps="false"/>

            <View
                android:id="@+id/line_confirm"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_5"/>

            <Button
                android:id="@+id/btn_acept"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.00"
                android:text="@string/text_btn_acept_alert"
                android:textSize="@dimen/size_text_buton_alert"
                android:textColor="@color/color_6"
                android:background="@drawable/view_effect_button"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>